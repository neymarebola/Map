<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="15sp"
    android:weightSum="2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_my_tit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="20dp"
                tools:text="vi tri cua ban"/>
            <TextView
                android:id="@+id/txt_lat_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="vi do: "/>
            <TextView
                android:id="@+id/txt_long_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="kinh do: "/>
            <TextView
                android:id="@+id/txt_location_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="dia diem: "/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="#B6B0B0"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_tit_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:text="vi tri cua ban" />

            <TextView
                android:id="@+id/txt_lat_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="vi do: " />

            <TextView
                android:id="@+id/txt_long_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="kinh do: " />

            <TextView
                android:id="@+id/txt_location_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="dia diem: " />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_distance_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        tools:text="Khoang cach hai nguoi: "/>

</LinearLayout>